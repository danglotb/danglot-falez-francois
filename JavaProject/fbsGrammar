main 					:= 	list_instruction

list_instruction		:= 	instruction
						|	list_instruction instruction
		
instruction				:=	structure
						|	arithmetic_instruction
					
arithmetic_instruction	:=	boolean ";"

block_instruction		:=	instruction
						|	"{" list_instruction "}"
					
structure				:= "if" "(" boolean_expresion ")" block_instruction

boolean_expresion		:= 	boolean

boolean					:= 	"true"
						|	"false"
					
number 					:=	digit
						| 	number digit
					
digit					:= [0-9]